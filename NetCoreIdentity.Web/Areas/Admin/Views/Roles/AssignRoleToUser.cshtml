@model List<AdminModel.AssignRoleToUserViewModel>
@{
    ViewData["Title"] = "AssignRoleToUser";
}

<h1>AssignRoleToUser</h1>


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>Rol Atama</h4>
        <form asp-action="AssignRoleToUser" method="post" asp-route-userId="@ViewBag.userId">

         @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist">
                    <label class="form-check-label" asp-for="@Model[i].Name">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name">
                    <input type="hidden" asp-for="@Model[i].Id">
                </div>
            }
            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-primary" />
            </div>
            
        </form>
        <div class="mt-3">
            <a asp-controller="Home" asp-action="UserList">Kullanıcı Listesine Dön</a>
        </div>
    </div>
</div>

