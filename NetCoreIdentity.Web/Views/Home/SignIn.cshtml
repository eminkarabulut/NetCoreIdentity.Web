@{
	ViewData["Title"] = "SignIn";
}
@model SignInViewModel

@section Scripts{

	@await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
	<div class="col-md-4 offset-md-4">
		<h2>Kullanıcı Giriş</h2>

		<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
		</div>

		<form asp-action="SignIn" asp-controller="Home" method="post" asp-route-returnurl="@Context.Request.Query["returnUrl"]">
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input class="form-control" asp-for="Email">
				<span asp-validation-for="Email"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input type="password" class="form-control" asp-for="Password">
				<span asp-validation-for="Password"></span>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="mb-3 form-check">
						<input class="form-check-input" asp-for="RememberMe">
						<label class="form-check-label" asp-for="RememberMe"></label>
					</div>
				</div>
				<div class="col-md-6">
					<a asp-action="ForgetPassword" asp-controller="Home" class="float-end btn btn-outline-secondary btn-sm">Şifremi Unuttum</a>
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Giriş Yap</button>

			<div>
			</div>

		</form>
	</div>
</div>

